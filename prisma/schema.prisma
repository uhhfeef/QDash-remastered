datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Sidebar {
  id        String   @id @default(uuid())
  name      String
  url       String
  createdAt DateTime @default(now())
} 

model Message {
  id          String   @id @default(uuid())
  content     String
  role        String
  dashboardId String   // References the ID from sidebar/dashboard system
  createdAt   DateTime @default(now())

  @@index([dashboardId]) // Add an index for better query performance
}